{
  "name": "opencode-reskin",
  "version": "0.2.6",
  "description": "OpenCode plugin for skin transformation planning (opencode-reskin)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist",
    "skins"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "generate-skins": "bun scripts/generate-skins.ts",
    "build": "bun run generate-skins && bun build src/index.ts --outdir dist --target bun --format esm && tsc --emitDeclarationOnly && cp -r skins dist/",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run clean && bun run build",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check ."
  },
  "keywords": [
    "opencode",
    "plugin",
    "skining",
    "design-system"
  ],
  "author": "vtemian",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vtemian/opencode-reskin.git"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.0.224",
    "valibot": "^1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "bun-types": "latest",
    "lefthook": "^1.11.0",
    "typescript": "^5.7.3"
  }
}
