    ]
  },
  "spacing": {
    "unit": "0.25rem"
  },
  "radius": {
    "sizes": [
      { "name": "sm", "value": "0.125rem" },
      { "name": "md", "value": "0.25rem" },
      { "name": "lg", "value": "0.5rem" },
      { "name": "xl", "value": "0.75rem" },
      { "name": "full", "value": "9999px" }
    ]
  },
  "voice": {
    "tone": "Terminal, technical, precise",
    "principles": ["Monospace everywhere", "High contrast", "No fluff"]
  },
  "guidelines": {
    "dos": ["Use monospace font consistently", "Keep borders sharp (black)", "Use semantic color names"],
    "donts": ["Mix font families", "Use soft/rounded aesthetics", "Add unnecessary decoration"]
  }
}
