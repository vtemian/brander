{
  "name": "nof1",
  "version": "1.0",
  "meta": {
    "target": "web"
  },
  "colors": {
    "palette": [
      { "name": "primary", "value": "#0000ff", "description": "Accent primary" },
      { "name": "secondary", "value": "#8b5cf6", "description": "Accent secondary" },
      { "name": "success", "value": "#00aa00" },
      { "name": "warning", "value": "#ffaa00" },
      { "name": "error", "value": "#ff0000" }
    ],
    "semantic": [
      { "name": "background", "light": "#ffffff", "dark": "#ffffff" },
      { "name": "foreground", "light": "#000000", "dark": "#000000" },
      { "name": "foreground-muted", "light": "#333333", "dark": "#333333" },
      { "name": "foreground-subtle", "light": "#666666", "dark": "#666666" },
      { "name": "surface", "light": "#ffffff", "dark": "#ffffff" },
      { "name": "surface-elevated", "light": "#f8f9fa", "dark": "#f8f9fa" },
      { "name": "surface-hover", "light": "#f1f3f4", "dark": "#f1f3f4" },
      { "name": "border", "light": "#000000", "dark": "#000000" },
      { "name": "border-subtle", "light": "#cccccc", "dark": "#cccccc" }
    ]
  },
  "typography": {
    "fonts": [{ "role": "mono", "family": "IBM Plex Mono", "fallback": "monospace" }],
    "scale": [
      { "name": "base", "size": "1rem", "lineHeight": "1.4" },
      { "name": "sm", "size": "0.875rem", "lineHeight": "1.25rem" },
